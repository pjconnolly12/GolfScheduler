@page
@model CreateModel
@{
  ViewData["Title"] = "Add Entry";
}

<h2>Add Entry</h2>

<form method="post">
  <div class="form-group">
    <label asp-for="Entry.PlayerId">Player</label>
    <select asp-for="Entry.PlayerId" class="form-control" asp-items="Model.Players">
      <option value="">-- Select Player --</option>
    </select>
  </div>

  <div class="form-group">
    <label asp-for="Entry.RoundId">Round</label>
    <select asp-for="Entry.RoundId" class="form-control" asp-items="Model.Rounds">
      <option value="">-- Select Round --</option>
    </select>
  </div>

  <div class="form-group">
    <label asp-for="Entry.Status">Status</label>
    <select asp-for="Entry.Status" class="form-control">
      <option>Confirmed</option>
      <option>Maybe</option>
    </select>
  </div>

  <div class="form-group">
    <label asp-for="Entry.Guests">Guests (0â€“2)</label>
    <input asp-for="Entry.Guests" type="number" class="form-control" min="0" max="2" />
    <span asp-validation-for="Entry.Guests" class="text-danger"></span>
  </div>

  <button type="submit" class="btn btn-primary mt-3">Add Entry</button>
</form>